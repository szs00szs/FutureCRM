<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.future.hist.crm.dao.RoleMapper">

	<insert id="insert" parameterType="Role">
		insert into sysrole(remark, name)
		values(#{remark},#{name})
	</insert>

	<!-- 得到所有的记录条数 -->
	<select id="getTotalCount" resultType="Integer">
		select count(*) from sysrole
	</select>
	
	<select id="getAllRoleByPage" parameterType="BaseSearch" resultType="Role">
		select *from sysrole r where r.id is not null
	</select>
	
	<select id="getRoleById" resultType="Role" parameterType="Long">
		select *from sysrole r where r.id = #{role_id}
	</select>
	
	<update id="updateRole" parameterType="Department">
		 update sysrole set remark = #{remark}, name = #{name} where id = #{id}
	</update>
	<delete id="deleteRoleById" parameterType="Long">
		delete from sysrole where id = #{role_id}
	</delete>
</mapper>