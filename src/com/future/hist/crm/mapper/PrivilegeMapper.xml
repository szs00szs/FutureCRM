<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.future.hist.crm.dao.PrivilegeMapper">

<sql id="privilegeColumns">
		a.id,
		a.name,
		a.type,
		a.url,
		a.permission,
		a.parent_id ,
		a.parent_ids,
		a.description,
		p.name AS "parent.name"
	</sql>
	
	<sql id="privilegeJoins">
		LEFT JOIN sysprivilege p ON p.id = a.parent_id
    </sql>

<resultMap type="Privilege" id="getPrivilege">
	<id column="id" property="id" />
	<result column="name" property="name"/>
	<result column="type" property="type"/>
	<result column="description" property="description"/>
	<result column="url" property="url"/>
	<result column="permission" property="permission"/>
</resultMap>
<resultMap type="Privilege" id="getPrarentPrivilege">
	<id column="id" property="id" />
	<result column="name" property="name"/>
	<result column="type" property="type"/>
	<result column="description" property="description"/>
	<result column="url" property="url"/>
	<result column="permission" property="permission"/>
</resultMap>

<!-- 添加权限 -->
	<insert id="save" parameterType="Privilege">
		INSERT INTO sysprivilege
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="description != null">
				description,
			</if>
			<if test="url != null">
				url,
			</if>
			<if test="parent_id != null">
				parent_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="name != null">
				#{name},
			</if>
			<if test="description != null">
				#{description},
			</if>
			<if test="url != null">
				#{url},
			</if>
			<if test="parent_id != null">
				#{parent_id},
			</if>
		</trim>
	</insert>
	
	<!-- 查询权限 -->
	<select id="getById" resultMap="getPrivilege">
		select *from sysprivilege where id = #{id}
	</select>
	
	<select id="getAllPrivilege" resultMap="getPrivilege">
		<!-- select *from sysprivilege -->
		SELECT
			<include refid="privilegeColumns"/>
		FROM sysprivilege a
			<include refid="privilegeJoins"/>
	</select>
	<!--  <select id="getAllPrivilege" resultMap="getPrivilege">  
        SELECT  
          pri.id,  
          pri.name,  
          pri.description,  
          pri.url,  
          pri.parent_id
        FROM  
          sysprivilege  pri
        LEFT JOIN  
          sysprivilege children
        ON  
          pri.id = children.parent_id  
    </select>   -->
	<select id="findTopPrivileges" resultMap="getPrivilege">
		select *from sysprivilege where parent_id = null;
	</select>
	
	<select id="findAllList" resultType="Privilege">
		SELECT
			<include refid="privilegeColumns"/>
		FROM sysprivilege a
			<include refid="privilegeJoins"/>
	</select>
</mapper>