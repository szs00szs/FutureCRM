<resultMap type="Privilege" id="getPrarentPrivilege">
	<id column="id" property="id" />
	<result column="name" property="name"/>
	<result column="type" property="type"/>
	<result column="description" property="description"/>
	<result column="url" property="url"/>
	<result column="permition" property="permition"/>
</resultMap>

<!-- 添加权限 -->
	<insert id="save" parameterType="Privilege">
		INSERT INTO sysprivilege
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="description != null">
				description,
			</if>
			<if test="url != null">
				url,
			</if>
			<if test="parent_id != null">
				parent_id,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id},
			</if>
			<if test="name != null">
				#{name},
			</if>
			<if test="description != null">
				#{description},
			</if>
			<if test="url != null">
				#{url},
			</if>
			<if test="parent_id != null">
				#{parent_id},
			</if>
		</trim>
	</insert>
	
	<!-- 查询权限 -->
	<select id="getById" resultMap="getPrivilege">
		select *from sysprivilege where id = #{id}
	</select>
	
	<select id="getAllPrivilege" resultMap="getPrivilege">
		select *from sysprivilege
	</select>
