<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.future.hist.crm.dao.DepartmentMapper">

	<select id="getAllDepartmentByPage" parameterType="BaseSearch" resultType="Department">
		<!-- select *from department d where d.id is not null -->
		<!-- <![CDATA[  -->
			select * from department d where d.id is not null
		<!-- ]]> -->
	</select>
	<select id="getAllDepartment" resultType="Department">
			select * from department d where d.id is not null
	</select>
	
	<select id="getById" resultType="Department" parameterType="Long">
		select *from department d where d.id = #{department_id}
	</select>
	
	<insert id="insert" parameterType="Department">
		insert into department(remark, name,principal,incumbent)
		values(#{remark},#{name},#{principal}, #{incumbent})
	</insert>
	
	<update id="update" parameterType="Department">
		 update department set remark = #{remark}, name = #{name}, principal = #{principal},incumbent = #{incumbent} where id = #{id}
	</update>
	
	<delete id="delete" parameterType="Long">
		delete from department where id = #{department_id}
	</delete>
	<!-- 得到所有的记录条数 -->
	<select id="getTotalCount" resultType="Integer">
		select count(*) from department
	</select>
	
	<!-- 根据名称查询 -->
	<select id="getDepartmentByNameLike" resultType="Department" parameterType="String">
		select *from department
		 <where> 
		    <if test="#{_parameter} != null">
		         name like CONCAT('%', #{name}, '%')
		    </if> 
		  </where>
	</select>
	
</mapper>