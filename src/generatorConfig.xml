<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration >
     <!-- <classPathEntry location="y:\\workspace\pojo\WebContent\WEB-INF\lib\ojdbc14.jar" 
        /> -->
    <classPathEntry
        location="D:\study\eclipse\workspace\FutureCRM\WebContent\WEB-INF\lib\mysql-connector-java-5.1.7-bin.jar" />
    <context id="user_mySql_table" targetRuntime="MyBatis3">
        <!-- 开启注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="false" />
        </commentGenerator>

        <!-- 数据库连接 -->
        <!-- connectionURL="jdbc:oracle:thin:@127.0.0.1:1521:orcl" userId="orcl" 
            password="orcl"> -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
            connectionURL="jdbc:mysql://localhost:3306/futurecrm" 
            userId="root"
            password="root">
        </jdbcConnection>

        <!--允许数值类型转换成不同类型,否则都映射为BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- 模型文件 数据表对应的Model层 -->
        <javaModelGenerator targetPackage="com.future.hist.crm.domain"
            targetProject="FutureCRM">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- XML映射文件 -->
        <sqlMapGenerator targetPackage="com.future.hist.crm.mapper"
            targetProject="FutureCRM">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- DAO文件(mapper接口) -->
        <javaClientGenerator targetPackage="com.future.hist.crm.dao"
            targetProject="FutureCRM" type="XMLMAPPER">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 数据库表 -->
        <!--  <table tableName="T_USER" domainObjectName="User">
            <property name="useActualColumnNames" value="false" />-->
            <!-- <generatedKey column="ID" sqlStatement="DB2" identity="true" /> <columnOverride 
                column="DATE_FIELD" property="startDate" /> <ignoreColumn column="FRED" /> 
                <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" /> -->
        <!-- </table> -->

        <table tableName="sysuser" domainObjectName="User">
            <!-- useActualColumnNames属性是为了使生成的model字段与数据库的字段大小写不一致 -->
            <property name="useActualColumnNames" value="false" />
        </table>

    </context>
</generatorConfiguration>